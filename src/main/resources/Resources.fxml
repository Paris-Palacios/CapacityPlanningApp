<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="569.0" prefWidth="932.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.capacity.controllers.ResourceController">
    <left>
        <VBox prefHeight="569.0" prefWidth="364.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label text="Offices" />
                                <ComboBox fx:id="cmbOffices" prefWidth="150.0" promptText="Offices" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label text="Cost Centers" />
                                <ComboBox fx:id="cmbCostCenters" prefWidth="150.0" promptText="Cost Centers" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <TableView fx:id="tableViewResources" prefHeight="365.0" prefWidth="364.0">
                    <columns>
                        <TableColumn fx:id="tblViewOfficeColumn" prefWidth="53.0" text="Office" />
                        <TableColumn fx:id="tblViewCostCenterColumn" prefWidth="74.0" text="Cost Center" />
                        <TableColumn fx:id="tblViewResourceColumn" prefWidth="227.0" text="Resource" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="btnApply" mnemonicParsing="false" onAction="#onClickApply" text="Apply" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox>
                    <children>
                        <ComboBox fx:id="cmbInitiatives" prefHeight="25.0" prefWidth="278.0" promptText="Initiatives" />
                        <Spinner fx:id="yearSelector" prefHeight="25.0" prefWidth="92.0" />
                        <Button mnemonicParsing="false" onAction="#onSave" text="Save">
                            <HBox.margin>
                                <Insets left="50.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <TableView fx:id="tableViewResourcePlanning" editable="true" prefHeight="504.0" prefWidth="688.0">
                    <columns>
                        <TableColumn fx:id="tblViewResourcePlanningMonthColumn" editable="false" prefWidth="77.0" text="Month" />
                        <TableColumn fx:id="tblViewResourcePlanningProjectColumn" prefWidth="639.0" text="Initiative">
                            <columns>
                                <TableColumn fx:id="commitedColumn" prefWidth="75.0" text="Commited" />
                                <TableColumn fx:id="plannedColumn" prefWidth="75.0" text="Planned" />
                            </columns>
                        </TableColumn>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
